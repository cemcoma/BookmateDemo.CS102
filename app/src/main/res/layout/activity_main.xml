<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nameTextField"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.userLoginActivity">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="224dp"
        android:ems="10"
        android:hint="Enter Your name"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHint="#9E0505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textPersonName|textWebPassword"
        android:textColorHint="#A81919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <Button
        android:id="@+id/userEntryButton"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#6C1414"
        android:text="Enter"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#550707"
        android:textCursorDrawable="@android:drawable/alert_light_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="134dp"
        android:layout_height="119dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638"
        app:srcCompat="@drawable/bookmate_logo"
        tools:srcCompat="@drawable/bookmate_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>