<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ToolBar"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="BookMate Chat"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/teal_700"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/bar_layout_relaNotif"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/bar_layout_imgNotif"

            android:src="@drawable/chat_notification_foreground"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bar_layout_notification_count"
            android:layout_alignRight="@+id/bar_layout_imgNotif"
            android:textSize="30sp"
            android:textColor="@color/teal_700" />


    </RelativeLayout>


</androidx.appcompat.widget.Toolbar>